<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VEdit"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <system:Double x:Key="DialogTextBoxHeight">28</system:Double>
    
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource OuterColor}" />
        <Setter Property="BorderBrush" Value="{StaticResource InnerColor}" />
        <Setter Property="Foreground" Value="White" />
    </Style>
    
    <Style TargetType="TextBox" x:Key="DecoratorTextBox">
        <Setter Property="Background" Value="{StaticResource OuterColor}" />
        <Setter Property="BorderBrush" Value="{StaticResource InnerColor}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="MinWidth" Value="25"/>
        <Setter Property="Height" Value="16"/>
    </Style>

    <Style TargetType="TextBox" x:Key="EditorTextBox">
        <Setter Property="TextWrapping" Value="WrapWithOverflow" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

</ResourceDictionary>